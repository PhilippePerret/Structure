
<div id="element-form" class="hidden">
  <input type="hidden" id="elt-id" value="" />
  <div>
    <.select_type id="elt-type" class="" />
    <.select_ideality id="elt-ideality" class="" />
    <.select_state id="elt-state" class="" />
  </div>
  <div>

    <div class="iblock">
      <input 
        id="elt-pitch" 
        type="text"
        class="bigger"
        value="" 
        placeholder="Résumé" 
        style="width:400px;" />
    </div>

  </div>

  <div>

    <div class="iblock">
      <label for="elt-time" class="block">Position</label>
      <input id="elt-time" type="text" class="horloge" value="1:00:00" placeholder="H:MM:SS"/>
    </div>
    <div class="iblock">
      <label for="elt-duree" class="block">Durée</label>
      <input id="elt-duree" type="text" class="horloge" value="4:00" placeholder="H:MM:SS"/>
    </div>
    <div class="iblock">
      <label for="elt-tension" class="block">Tension</label>
      <input id="elt-tension" type="text" title="Indication de la tension de la scène. Peut être un simple chiffre (de -9 à +9) suivi ou non d'un temps DANS LA SCÈNE (x;h:mm:ss)" style="width:120px!important;" value="" placeholder="level;H:MM:SS" />
    </div>

    <div class="iblock">
      <label for="elt-tags" class="block">Tags</label>
      <input id="elt-tags" type="text" title="Tags de l'élément séparés par des virgules" style="width:200px!important;" value="" placeholder="tag1, tag2, tag3, ..." />
    </div>

  </div>

  <div>
    <label for="elt-color">Couleur</label><select id="elt-color" style="width:200px;"></select>
  </div>

  <div class="buttons">
    <button class="btn small fleft" onclick="FormElement.hide()">Fermer</button>
    <button class="btn small fleft" onclick="FormElement.reset()">Reset</button>
    <button class="btn small" onclick="FormElement.createOrUpdate()">Enregistrer</button>
  </div>
</div> <!-- #element-form -->
